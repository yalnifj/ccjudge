    <filter-name>AdminSecurityFilter</filter-name>
    <url-pattern>/contest/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AdminSecurityFilter</filter-name>
    <url-pattern>/problem/*</url-pattern>
  </filter-mapping>
