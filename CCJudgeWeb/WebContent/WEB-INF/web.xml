  <servlet-mapping>
    <servlet-name>ResourceController</servlet-name>
    <url-pattern>/resource/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ResourceController</servlet-name>
    <url-pattern>/resource</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SubmissionAdminController</servlet-name>
    <url-pattern>/submission/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SubmissionAdminController</servlet-name>
    <url-pattern>/submission</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SubmissionController</servlet-name>
    <url-pattern>/home/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SubmissionController</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
